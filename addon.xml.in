<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="@APPNAME@" name="beardypig Add-on Repository" version="@VERSION@" provider-name="beardypig">
    <extension point="xbmc.addon.repository" name="beardypig Add-on Repository">
        <info>@BASEPATH@/addons.xml</info>
        <checksum>@BASEPATH@/last_updated</checksum>
        <datadir zip="true">@BASEPATH@/addons/</datadir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>Install Add-ons from beardypig Repository</summary>
        <description>Add-ons for Kodi</description>
        <disclaimer>by beardypig</disclaimer>
        <platform>all</platform>
    </extension>
</addon>
